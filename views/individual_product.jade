extends individual_product-layout

block content
	header
		a(href='/packaging')
	div.container
		div.row.specifications
			div.product_title
				h3 #{product.product}
			div.col-sm-6.col-xs-12
				p #{product.product_description}
				form.form-horizontal.shipCalcAddress(role='form')
					div.form-group
						label.col-sm-2.control-label Street
						div.col-sm-10
							input.form-control#streetInput(type='text', placholder='55 Sesame Street', required)
					div.form-group
						label.col-sm-2.control-label Apt
						div.col-sm-10
							input.form-control#cityInput(type='text', placholder='Gotham', required)
					div.form-group
						label.col-sm-2.control-label State
						div.col-sm-3
							select.form-control
								option(value="AL") AL
								option(value="AK") AK
								option(value="AZ") AZ
								option(value="AR") AR
								option(value="CA") CA
								option(value="CO") CO
								option(value="CT") CT
								option(value="DE") DE
								option(value="DC") DC
								option(value="FL") FL
								option(value="GA") GA
								option(value="HI") HI
								option(value="ID") ID
								option(value="IL") IL
								option(value="IN") IN
								option(value="IA") IA
								option(value="KS") KS
								option(value="KY") KY
								option(value="LA") LA
								option(value="ME") ME
								option(value="MD") MD
								option(value="MA") MA
								option(value="MI") MI
								option(value="MN") MN
								option(value="MS") MS
								option(value="MO") MO
								option(value="MT") MT
								option(value="NE") NE
								option(value="NV") NV
								option(value="NH") NH
								option(value="NJ") NJ
								option(value="NM") NM
								option(value="NY") NY
								option(value="NC") NC
								option(value="ND") ND
								option(value="OH") OH
								option(value="OK") OK
								option(value="OR") OR
								option(value="PA") PA
								option(value="RI") RI
								option(value="SC") SC
								option(value="SD") SD
								option(value="TN") TN
								option(value="TX") TX
								option(value="UT") UT
								option(value="VT") VT
								option(value="VA") VA
								option(value="WA") WA
								option(value="WV") WV
								option(value="WI") WI
								option(value="WY") WY
						label.col-sm-1.control-label Zip
						div.col-sm-4
							input.form-control#zipInput(type='text', placholder='80302' required)
					div.form-group
						div.col-sm-offset-2.col-sm-10
							button.btn.btn-default.shippingBtn(type='submit') Calculate Shipping
					div.priceCalculated
						p #{product.price}
			div.col-sm-6.col-xs-12
				img(src='/images/bottle_filler.jpg')
	div.row.seller
		div.col-sm-6.col-xs-12.seller-specs
			div.panel.panel-default.brewery-specs
				div.panel-heading
					h5.panel-title Brewery
				div.panel-body
					| #{product.name}
				div.panel-heading
					h5.panel-title Location
				div.panel-body
					p #{product.location}
				div.panel-heading
					h5.panel-title Verification Level
				div.panel-body
					p Verified
		div.col-sm-6.col-xs-12.seller-contact-container
			div.seller-contact
				p Click here to contact seller
			div.form.seller-hidden
				div.form-group
					label Email address
					input.form-control(type='email', placholder='yourname@email.com')
				div.form-group
					label Subject
					input.form-control(type='text', placholder='Re: Brewery Product for Sale')
				div.form-group
					label Message
					input.form-control(type='text')
				div.form-group
					button.btn.btn-default(type='submit') Send

	block scripts
	script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
	script(src='http://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min.js')

		//- TEMPLATE for 
	script#productInfo(type='text-handlebars-template')

		h3 {{product}}
		p {{product_description}}